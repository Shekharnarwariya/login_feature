<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">

	<bean id="hostdataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="com.mysql.cj.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/host_brd?autoReconnect=true&amp;useSSL=false" />
		<property name="username" value="smppuser" />
		<property name="password" value="smpp" />
		<property name="initialSize" value="10" />
        <property name="maxActive" value="10" />
        <property name="maxIdle" value="10" />
		<property name="minIdle" value="10" />
		<property name="testOnBorrow" value="true" />
		<property name="testWhileIdle" value="true" />
		<property name="timeBetweenEvictionRunsMillis" value="600000" />
		<property name="minEvictableIdleTimeMillis" value="600000" />
	</bean>


<!-- Hibernate 5 SessionFactory for host Bean definition-->
	<bean id="hostSessionFactory"
		class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
		<property name="dataSource" ref="hostdataSource" />
		<property name="annotatedClasses">
			<list>
				<value>com.hti.user.dto.UserEntry</value>
				<value>com.hti.user.dto.DlrSettingEntry</value>
				<value>com.hti.user.dto.ProfessionEntry</value>
				<value>com.hti.user.dto.WebMasterEntry</value>
				<value>com.hti.route.dto.OptionalRouteEntry</value>
				<value>com.hti.user.dto.BalanceEntry</value>
				<value>com.hti.network.dto.NetworkEntry</value>
				<value>com.hti.route.dto.RouteEntry</value>
				<value>com.hti.route.dto.HlrRouteEntry</value>
				<value>com.hti.smsc.dto.SmscEntry</value>
				<value>com.hti.smsc.dto.GroupEntry</value>
				<value>com.hti.smsc.dto.GroupMemberEntry</value>
				<value>com.hti.smsc.dto.TrafficScheduleEntry</value>
				<value>com.hti.route.dto.MmsRouteEntry</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.current_session_context_class">thread</prop>
				<prop key="hibernate.show_sql">false</prop>
			</props>
		</property>
	</bean>
	
	<!--host DAO -->
	<bean id="UserDAO" class="com.hti.dao.impl.UserDAOImpl" scope="prototype">
		<property name="sessionFactory" ref="hostSessionFactory" />
	</bean> 
	
	<bean id="RouteDAO" class="com.hti.dao.impl.RouteDAOImpl" scope="prototype">
		<property name="sessionFactory" ref="hostSessionFactory" />
	</bean> 
	
 	<bean id="NetworkDAO" class="com.hti.dao.impl.NetworkDAOImpl" scope="prototype">
		<property name="sessionFactory" ref="hostSessionFactory" />
	</bean>  
	
	<!--hlr DAO -->
	<bean id="SmscDAO" class="com.hti.dao.impl.SmscDAOImpl" scope="prototype">
		<property name="sessionFactory" ref="hostSessionFactory" />
	</bean>
	
</beans>